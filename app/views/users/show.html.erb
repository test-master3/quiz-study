<div class="user-profile">
  <h2>ユーザー情報</h2>

  <div class="info-item">
    <span class="info-label">メールアドレス：</span>
    <%= @user.email %>
  </div>

  <div class="info-item">
    <span class="info-label">登録日時：</span>
    <%= l @user.created_at, format: :long %>
  </div>

  <div class="info-item">
    <span class="info-label">LINE連携：</span>
    <% if @user.line_linked? %>
      <span class="status status-connected">連携済み</span>
    <% else %>
      <span class="status status-disconnected">未連携</span>
    <% end %>
  </div>

  <div class="info-item">
    <h3>これまでの質問数</h3>
    <p><%= @user.questions.count %> 件</p>
  </div>

  <div class="action-buttons">
    <% unless @user.line_linked? %>
      <%= link_to new_line_account_path, class: 'action-button line-button' do %>
        <i class="fab fa-line"></i>
        <span>LINE連携をする</span>
      <% end %>
    <% end %>

    <%= link_to questions_path, class: 'action-button' do %>
      <i class="fas fa-list"></i>
      <span>質問一覧を見る</span>
    <% end %>

    <!-- ✅ 新規追加（クイズ管理画面） -->
    <%= link_to quizzes_path, class: 'action-button' do %>
      <i class="fas fa-clipboard-list"></i>
      <span>LINE送信クイズ管理</span>
    <% end %>

    <%= link_to new_question_path, class: 'action-button' do %>
      <i class="fas fa-plus"></i>
      <span>新しい質問をする</span>
    <% end %>
  </div>
</div>