<div class="flex-grow-1" style="overflow-y: auto;">
  <div class="container py-4">
    <div class="card">
      <div class="card-body p-4">
        <h2 class="card-title mb-4">ユーザー情報</h2>

        <div class="info-item mb-3">
          <span class="info-label fw-bold">メールアドレス：</span>
          <%= @user.email %>
        </div>

        <div class="info-item mb-3">
          <span class="info-label fw-bold">登録日時：</span>
          <%= l @user.created_at, format: :long %>
        </div>
        
        <div class="info-item mb-4">
          <span class="info-label fw-bold">LINE連携：</span>
          <% if @user.line_linked? %>
            <span class="badge bg-success">連携済み</span>
          <% else %>
            <span class="badge bg-secondary">未連携</span>
          <% end %>
        </div>

        <div class="info-item mb-4">
          <h5 class="fw-bold">これまでの質問数</h5>
          <p class="fs-4"><%= @user.questions.count %> 件</p>
        </div>

        <div class="action-buttons d-grid gap-2 d-md-flex justify-content-md-start">
          <%= link_to '質問一覧', questions_path, class: 'btn btn-subtle-primary' %>
          <% unless @user.line_linked? %>
            <%= link_to new_line_account_path, class: 'btn btn-success' do %>
              <i class="fab fa-line me-2"></i>LINE連携をする
            <% end %>
          <% end %>

          <%= link_to quizzes_path, class: 'btn btn-outline-secondary' do %>
            <i class="fas fa-clipboard-list me-2"></i>LINE送信クイズ管理
          <% end %>

          <%= link_to new_question_path, class: 'btn btn-primary' do %>
            <i class="fas fa-plus me-2"></i>新しい質問をする
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>