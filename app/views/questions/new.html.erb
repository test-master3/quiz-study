<div class="container">
  <!-- 左のサイドバー -->
  <div class="sidebar">
  <h2 style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis; font-size: 16px;">
  quiz-study アプリ
  </h2>
  <% if user_signed_in? %>
    <p>ようこそ：<%= current_user.email %></p>
    <%= link_to 'マイページ', user_path(current_user), class: 'button' %>
    <%= link_to 'LINE連携', new_line_account_path, class: 'button' %>
    <%= link_to '回答履歴', questions_path, class: 'button' %>
  <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, data: { turbo: false }, class: 'button' %>
  <% else %>
    <%= link_to '新規登録', new_user_registration_path, class: 'button' %>
    <%= link_to 'ログイン', new_user_session_path, class: 'button' %>
  <% end %>
</div>

  <!-- メイン画面 -->
  <div class="main-content">
    <!-- 質問フォーム -->
    <div class="box">
      <h3>質問入力画面</h3>
      <%= form_with model: @question, local: true do |form| %>
        <%= form.text_area :content, rows: 6, style: "width: 100%; height: 120px;" %>
        <%= form.submit "送信" %>
      <% end %>
    </div>

    <!-- GPT回答画面 -->
    <div class="box">
      <h3>GPT回答画面</h3>
      <p><%= @answer_text if @answer_text.present? %></p>
    </div>

    <!-- クイズ出力画面 -->
    <div class="box">
      <h3>クイズ出力画面</h3>
      <p>LINEにクイズを送りますか？</p>
      <label><input type="radio" name="send_to_line" value="yes"> YES</label>
      <label><input type="radio" name="send_to_line" value="no"> NO</label>
    </div>
  </div>
</div>