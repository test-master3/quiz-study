<div id="question_form_container" style="
  position: fixed;
  bottom: 0;
  left: 230px;
  right: 0;
  width: calc(100% - 260px);
  background-color: #fff;
  padding: 1rem;
  border-top: 1px solid #ccc;
  box-sizing: border-box;
  z-index: 10;">
  
  <div style="display: flex; align-items: center; gap: 1rem;">
    <h3 style="margin: 0;">質問入力画面</h3>
    <div>
      <span style="margin-right: 8px;">クイズをLINEに送りますか？</span>
      <label style="margin-right: 6px;"><input type="radio" name="send_to_line" value="yes"> YES</label>
      <label><input type="radio" name="send_to_line" value="no" checked> NO</label>
    </div>
  </div>

  <div data-controller="enter-submit">
  <%= form_with model: question, url: questions_path, local: true, data: { enter_submit_target: "form" } do |f| %>
    <%= f.text_area :content,
      data: { enter_submit_target: "textarea" },
      style: "width: 100%; height: 60px; resize: none; margin-top: 8px; padding: 8px;
              box-sizing: border-box; border: none; background-color: #f2f2f2; border-radius: 6px;" %>
    <div style="margin-top: 8px;">
      <%= f.submit "送信", class: "btn" %>
    </div>
  <% end %>
</div>