<h1>質問一覧</h1>

<% @questions.each do |question| %>
  <div class="question">
    <p><strong>内容:</strong> <%= question.content %></p>
    <p><strong>投稿日時:</strong> <%= question.created_at.strftime("%Y/%m/%d %H:%M") %></p>
    <%= link_to '詳細を見る', question_path(question) %>
  </div>
  <hr>
<% end %>

<%= link_to '新しい質問をする', new_question_path, class: 'button' %>